# ============================================================================
# PalmsGig - Social Media Task Marketplace
# Environment Configuration Template
# ============================================================================

# Environment Settings
ENVIRONMENT=development
DEBUG=True

# Application Configuration
API_V1_PREFIX=/api/v1
APP_NAME=PalmsGig
APP_VERSION=0.1.0

# Database Configuration
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://palmsgig:palmsgig@localhost:5432/palmsgig
POSTGRES_USER=palmsgig
POSTGRES_PASSWORD=palmsgig
POSTGRES_DB=palmsgig

# Redis Configuration
# Format: redis://host:port/database
REDIS_URL=redis://localhost:6379/0

# Security Configuration
# IMPORTANT: Generate secure random keys for production
# Use: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-secret-key-change-in-production-use-random-secure-key
JWT_SECRET=dev-jwt-secret-change-in-production-use-random-secure-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=True

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@palmsgig.com

# OAuth Configuration
# Social Media Platform OAuth Credentials
FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret
FACEBOOK_REDIRECT_URI=http://localhost:8000/api/v1/oauth/facebook/callback

TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret
TWITTER_REDIRECT_URI=http://localhost:8000/api/v1/oauth/twitter/callback

INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_REDIRECT_URI=http://localhost:8000/api/v1/oauth/instagram/callback

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/oauth/google/callback

# Payment Gateway Configuration
STRIPE_API_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Task Management Configuration
TASK_MIN_BUDGET=5.00
TASK_MAX_BUDGET=10000.00
TASK_PLATFORM_FEE_PERCENTAGE=10.0
TASK_EXPIRATION_DAYS=30

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Search Configuration (Elasticsearch)
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=palmsgig

# Monitoring and Observability
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Storage Configuration
UPLOAD_MAX_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4
STORAGE_BACKEND=local
STORAGE_PATH=/app/uploads

# AWS S3 Configuration (if using S3 storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=palmsgig-uploads

# Feature Flags
FEATURE_SOCIAL_LOGIN_ENABLED=True
FEATURE_PAYMENT_ENABLED=True
FEATURE_TASK_RECOMMENDATIONS_ENABLED=True
FEATURE_MFA_ENABLED=True

# Session Configuration
SESSION_COOKIE_NAME=palmsgig_session
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=lax
SESSION_MAX_AGE=86400

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Notification Configuration
NOTIFICATION_CHANNELS=email,push
NOTIFICATION_QUEUE=notifications

# Admin Configuration
ADMIN_EMAIL=admin@palmsgig.com
ADMIN_PASSWORD=change-this-in-production

# Testing Configuration
TEST_DATABASE_URL=postgresql://palmsgig:palmsgig@localhost:5432/palmsgig_test
